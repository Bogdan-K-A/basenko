# Включаем модуль перезаписи URL
RewriteEngine On

# Базовый путь (если сайт находится в подпапке)
# RewriteBase /

# Перенаправляем все запросы на index.html для SPA маршрутизации
# Исключаем существующие файлы и папки
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.html [QSA,L]

# Альтернативный способ для хостингов без mod_rewrite
# Если выше не работает, раскомментируйте эти строки:
# ErrorDocument 404 /index.html
# ErrorDocument 500 /index.html

# Простые настройки безопасности (работают на большинстве хостингов)
<IfModule mod_headers.c>
    # Защита от XSS атак
    Header always set X-XSS-Protection "1; mode=block"
    # Запрет на встраивание в iframe
    Header always set X-Frame-Options "SAMEORIGIN"
    # Защита от MIME-типов
    Header always set X-Content-Type-Options "nosniff"
</IfModule>

# Простые настройки кэширования
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType video/mp4 "access plus 1 month"
</IfModule>

# Сжатие файлов
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript text/javascript
</IfModule>
